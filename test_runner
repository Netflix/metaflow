#!/bin/bash

set -o errexit -o nounset -o pipefail

install_deps() {
  for version in 2 3;
  do
    python$version -m pip install . coverage
  done
}

run_tests() {
  cd test/core \
  && python3 -m unittest discover extra_unit_tests \
  && PYTHONPATH=`pwd`/../../ python3 run_tests.py --num-parallel 8
}

install_deps && run_tests
